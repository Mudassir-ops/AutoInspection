<MotionScene xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <Transition
        app:constraintSetEnd="@id/expanded"
        app:constraintSetStart="@id/collapsed"
        app:duration="500">
        <OnClick app:targetId="@id/serialBubble" />
    </Transition>

    <ConstraintSet android:id="@+id/collapsed">
        <Constraint android:id="@id/tvSerialDetails">
            <Layout
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toEndOf="@id/serialBubble"
                app:layout_constraintTop_toTopOf="@id/serialBubble" />
            <PropertySet android:alpha="0.5" />
        </Constraint>

        <Constraint android:id="@id/imgExpand">
            <Transform android:rotation="0" />
        </Constraint>
    </ConstraintSet>

    <ConstraintSet android:id="@+id/expanded">
        <Constraint android:id="@id/tvSerialDetails">
            <Layout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toEndOf="@id/serialBubble"
                app:layout_constraintTop_toTopOf="@id/serialBubble" />
            <PropertySet android:alpha="1" />
        </Constraint>

        <Constraint android:id="@id/imgExpand">
            <Transform android:rotation="180" />
        </Constraint>
    </ConstraintSet>
</MotionScene>
