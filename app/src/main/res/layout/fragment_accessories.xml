<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="viewModel"
            type="com.example.autoinspectionapp.ui.home.pagerScreens.preliminary.PreliminaryViewModel" />
    </data>

    <androidx.core.widget.NestedScrollView xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        tools:context=".ui.home.pagerScreens.preliminary.PreliminaryFragment">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:paddingHorizontal="@dimen/_12sdp"
            android:paddingVertical="@dimen/_10sdp">

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/tvHeaderSection"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_regular"
                android:gravity="center"
                android:paddingVertical="@dimen/_5sdp"
                android:text="Accessories"
                android:textColor="@color/blue_color"
                android:textSize="@dimen/_16ssp"
                app:fontFamily="@font/roboto_regular"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <LinearLayout
                android:id="@+id/inputFiledLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:orientation="vertical"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvHeaderSection">

                <com.example.autoinspectionapp.utils.InputFieldView
                    android:id="@+id/inputSpareWheel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:labelText="Spare Wheel" />

                <com.example.autoinspectionapp.utils.InputFieldView
                    android:id="@+id/inputToolKit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:labelText="Tool Kit" />

                <com.example.autoinspectionapp.utils.InputFieldView
                    android:id="@+id/inputJack"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:labelText="Jack" />

                <com.example.autoinspectionapp.utils.InputFieldView
                    android:id="@+id/inputPunctureRepairKit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:labelText="Puncture Repair Kit" />


            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>

</layout>