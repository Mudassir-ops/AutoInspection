<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="viewModel"
            type="com.example.autoinspectionapp.ui.home.pagerScreens.accidentalChecklist.AccidentalChecklistViewModel" />
    </data>

    <androidx.core.widget.NestedScrollView xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        tools:context=".ui.home.pagerScreens.preliminary.PreliminaryFragment">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:paddingHorizontal="@dimen/_12sdp"
            android:paddingVertical="@dimen/_10sdp">

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/tvHeaderSection"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_regular"
                android:gravity="center"
                android:paddingVertical="@dimen/_5sdp"
                android:text=" Accidental Checklist"
                android:textColor="@color/blue_color"
                android:textSize="@dimen/_16ssp"
                app:fontFamily="@font/roboto_regular"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <LinearLayout
                android:id="@+id/inputFiledLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5sdp"
                android:orientation="vertical"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvHeaderSection">

                <!-- Engine Room Firewall -->
                <com.example.autoinspectionapp.utils.SpinnerFieldView
                    android:id="@+id/inputEngineRoomFirewall"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:defaultValue="@{viewModel.defaultValue}"
                    app:items="@{viewModel.accidentList}"
                    app:labelTextSpinner="Engine Room Firewall" />

                <!-- Right Strut Tower -->
                <com.example.autoinspectionapp.utils.SpinnerFieldView
                    android:id="@+id/inputRightStrutTower"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:defaultValue="@{viewModel.defaultValue}"
                    app:items="@{viewModel.accidentList}"
                    app:labelTextSpinner="Right Strut Tower" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvAccidentalImages"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="@dimen/_5sdp"
                    android:orientation="horizontal"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0"
                    tools:itemCount="10"
                    tools:listitem="@layout/image_item" />

                <!-- Left Strut Tower -->
                <com.example.autoinspectionapp.utils.SpinnerFieldView
                    android:id="@+id/inputLeftStrutTower"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:defaultValue="@{viewModel.defaultValue}"
                    app:items="@{viewModel.accidentList}"
                    app:labelTextSpinner="Left Strut Tower" />

                <!-- Right Front Rail -->
                <com.example.autoinspectionapp.utils.SpinnerFieldView
                    android:id="@+id/inputRightFrontRail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:defaultValue="@{viewModel.defaultValue}"
                    app:items="@{viewModel.accidentList}"
                    app:labelTextSpinner="Right Front Rail" />

                <!-- Left Front Rail -->
                <com.example.autoinspectionapp.utils.SpinnerFieldView
                    android:id="@+id/inputLeftFrontRail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:defaultValue="@{viewModel.defaultValue}"
                    app:items="@{viewModel.accidentList}"
                    app:labelTextSpinner="Left Front Rail" />

                <!-- Front Bumper Support -->
                <com.example.autoinspectionapp.utils.SpinnerFieldView
                    android:id="@+id/inputFrontBumperSupport"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:defaultValue="@{viewModel.defaultValue}"
                    app:items="@{viewModel.accidentList}"
                    app:labelTextSpinner="Front Bumper Support" />

                <!-- Rear Core Support -->
                <com.example.autoinspectionapp.utils.SpinnerFieldView
                    android:id="@+id/inputRearCoreSupport"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:defaultValue="@{viewModel.defaultValue}"
                    app:items="@{viewModel.accidentList}"
                    app:labelTextSpinner="Rear Core Support" />

                <!-- Radiator Core Support -->
                <com.example.autoinspectionapp.utils.SpinnerFieldView
                    android:id="@+id/inputRadiatorCoreSupport"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:defaultValue="@{viewModel.defaultValue}"
                    app:items="@{viewModel.accidentList}"
                    app:labelTextSpinner="Radiator Core Support" />

                <!-- Right A Pillar -->
                <com.example.autoinspectionapp.utils.SpinnerFieldView
                    android:id="@+id/inputRightAPillar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:defaultValue="@{viewModel.defaultValue}"
                    app:items="@{viewModel.accidentList}"
                    app:labelTextSpinner="Right A Pillar" />

                <!-- Left A Pillar -->
                <com.example.autoinspectionapp.utils.SpinnerFieldView
                    android:id="@+id/inputLeftAPillar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:defaultValue="@{viewModel.defaultValue}"
                    app:items="@{viewModel.accidentList}"
                    app:labelTextSpinner="Left A Pillar" />

                <!-- Right B Pillar -->
                <com.example.autoinspectionapp.utils.SpinnerFieldView
                    android:id="@+id/inputRightBPillar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:defaultValue="@{viewModel.defaultValue}"
                    app:items="@{viewModel.accidentList}"
                    app:labelTextSpinner="Right B Pillar" />

                <!-- Left B Pillar -->
                <com.example.autoinspectionapp.utils.SpinnerFieldView
                    android:id="@+id/inputLeftBPillar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:defaultValue="@{viewModel.defaultValue}"
                    app:items="@{viewModel.accidentList}"
                    app:labelTextSpinner="Left B Pillar" />

                <!-- Right C Pillar -->
                <com.example.autoinspectionapp.utils.SpinnerFieldView
                    android:id="@+id/inputRightCPillar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:defaultValue="@{viewModel.defaultValue}"
                    app:items="@{viewModel.accidentList}"
                    app:labelTextSpinner="Right C Pillar" />

                <!-- Left C Pillar -->
                <com.example.autoinspectionapp.utils.SpinnerFieldView
                    android:id="@+id/inputLeftCPillar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:defaultValue="@{viewModel.defaultValue}"
                    app:items="@{viewModel.accidentList}"
                    app:labelTextSpinner="Left C Pillar" />

                <!-- Right D Pillar -->
                <com.example.autoinspectionapp.utils.SpinnerFieldView
                    android:id="@+id/inputRightDPillar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:defaultValue="@{viewModel.defaultValue}"
                    app:items="@{viewModel.accidentList}"
                    app:labelTextSpinner="Right D Pillar" />

                <!-- Left D Pillar -->
                <com.example.autoinspectionapp.utils.SpinnerFieldView
                    android:id="@+id/inputLeftDPillar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:defaultValue="@{viewModel.defaultValue}"
                    app:items="@{viewModel.accidentList}"
                    app:labelTextSpinner="Left D Pillar" />

                <!-- Boot Floor -->
                <com.example.autoinspectionapp.utils.SpinnerFieldView
                    android:id="@+id/inputBootFloor"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:defaultValue="@{viewModel.defaultValue}"
                    app:items="@{viewModel.accidentList}"
                    app:labelTextSpinner="Boot Floor" />

                <!-- Front Underbody -->
                <com.example.autoinspectionapp.utils.SpinnerFieldView
                    android:id="@+id/inputFrontUnderbody"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:defaultValue="@{viewModel.defaultValue}"
                    app:items="@{viewModel.accidentList}"
                    app:labelTextSpinner="Front Underbody" />

                <!-- Rear Underbody -->
                <com.example.autoinspectionapp.utils.SpinnerFieldView
                    android:id="@+id/inputRearUnderbody"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:defaultValue="@{viewModel.defaultValue}"
                    app:items="@{viewModel.accidentList}"
                    app:labelTextSpinner="Rear Underbody" />

            </LinearLayout>


        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>

</layout>